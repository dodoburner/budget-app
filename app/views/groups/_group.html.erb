<div id="<%= dom_id group %>" class="d-flex p-2 bg-white">
  <%= link_to group_purchases_path(group), class: "d-flex" do %>
    <%= image_tag(group.icon, size: "80x80", alt: "Group") %> 

    <div class="ms-3">
      <p>
        Category: 
        <strong><%= group.name %></strong>
      </p>

      <p>
        Total Transactions:
        <strong><%= group.purchases.length %></strong>
      </p>
    </div>
  <% end %>

  <div class="dropdown ms-auto">
    <div class="mt-2" data-bs-toggle="dropdown" aria-expanded="false">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
        <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
      </svg>
    </div>
    <ul class="dropdown-menu">
      <li class="dropdown-item">
        <%= link_to 'Edit', edit_group_path(group) %>
      </li>
      <li class="dropdown-item text-danger">
        <%= link_to 'Delete', group_path(group), data: { turbo_method: :delete } %>
      </li>
    </ul>
  </div>
</div>
